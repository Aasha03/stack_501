      <section class="sectionCourse" aria-label="recent post">
        <div class="container">
          <div class="title-wrapper">
            <h2 class="h2 section-title">
              Add an <strong class="strong" style="display: inline;">EVENT </strong>
            </h2>
          </div>
          <ul class="grid-list">
                <form action="/uploadEvent" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="text" value="" name="EventImg" placeholder="Event Image URL">
                    <input type="text" name="EventTitle" value="" placeholder="Title">
                    <textarea name="content" placeholder="Description you want add here" minlength="10"></textarea>
                    <input type="text" name="EventLocation" placeholder="Venue">
                    <input type="text" name="EventMemebers" placeholder="Capacity">
                    <label for="EventStartDate">StartDate</label>
                    <input type="date" value="" name="EventStartDate" placeholder="EventStartDate" >
                    <br>
                    <label for="EventTime">Time&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                    <input type="time" value="" name="EventTime"  placeholder="EventTime">
                    <br>
                    <label for="EventEnd">EndDate&nbsp;&nbsp;</label>
                    <input type="date" value="" name="EventEndDate" >
                    
                    <div class="card-content">
                      <input type="submit" value="ADD EVENT"> 
                    </div>
                </form>
          </ul>
        </div>
      </section>
 
